<button type="button" {{on "click" (fn this.zoom 5)}}>Zoom in</button> | <button type="button" {{on "click" (fn this.zoom -5)}}>Zoom out</button>
<br><br>


<div class="gantt-chart ember-view"  style="height:100%" {{did-insert this.createElement}} >

   <div class="gantt-chart-inner"    style="height:100%" 
                {{on "mousedown" this.onMouseDown}}
                {{on "mouseup"   this.onMouseUp  }}
                {{on "mousemove"  this.onMouseMove }}
  >

<!--
   <div class="gantt-chart-inner"   >
-->
   <GanttTimeline   @showToday={{this.showToday}} @chart={{this}} />

 <!-- 
   <div class="gantt-titles-background" ></div>
     <div class="gantt-lines">
   -->
   <!--
   <div class="scroll-base" style="z-index:100; background-color:#ffff; height:300px;overflow-y:scroll; scrollbar-width: none;">
   -->
   <div class="gantt-titles-background" ></div>
<!--
     <div class="gantt-lines " style="z-index:100; background-color:#ffff; height:300px;overflow-y:scroll; scrollbar-width: none;"
-->
     <div class="gantt-lines " style="z-index:100; background-color:#ffff; height:100%;overflow-y:scroll; scrollbar-width: none;"
     >
   
        {{#each this.projects as |project|}}
             <GanttLine  @dateStart={{project.minStartDate}}
                         @dateEnd={{project.maxEndDate}}
           	         @inlineChilds={{project.jobs}}
           	         @title={{project.title}}
           	         @project={{project}}
           	         @chart={{this}}
           	         @chartElement={{this.element_}}
           	         @scrolling={{this.scrolling}}
           	         as |line|>
             </GanttLine>
	     <hr style="margin:8px;">
        {{/each}}
     </div>
   </div>
